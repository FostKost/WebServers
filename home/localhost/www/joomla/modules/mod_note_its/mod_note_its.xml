		    <language tag="ru-RU">ru-RU.mod_note_its.ini</language>
			<language tag="en-GB">en-GB.mod_note_its.ini</language>
			<language tag="de-DE">de-DE.mod_note_its.ini</language>
			<language tag="nl-NL">nl-NL.mod_note_its.ini</language>
		</languages>
		<files>	
                        <filename>assets/js/CyrillicOld_700.font.js</filename>
                        <filename>assets/js/Painter_300.font.js</filename>
                        <filename>assets/js/Atomic_Clock_Radio_400.font.js</filename>
