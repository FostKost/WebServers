			<filename>tmpl/default.php</filename>
			<filename>tmpl/index.html</filename>
			<filename>index.html</filename>
			<filename>mod_note_its.xml</filename>
		</files>
		
		<config>
			<fields name="params">
	            <fieldset name="basic">
					<field name="badge" type="list" default="pin" label="MOD_NOTE_ITS_BADGE" description="MOD_NOTE_ITS_BADGEDESC">
						<option value="no">MOD_NOTE_ITS_NULL</option>
						<option value="pin-green">MOD_NOTE_ITS_PINGREEN</option>
						<option value="pin-red">MOD_NOTE_ITS_PINRED</option>
						<option value="pin-blue">MOD_NOTE_ITS_PINBLUE</option>
						<option value="tape">MOD_NOTE_ITS_TAPE</option>
					</field>
					<field name="note_head" type="text" default="Note Headline." label="MOD_NOTE_ITS_HEAD" description="MOD_NOTE_ITS_HEADDESC" />
					<field name="separator" type="radio" default="1" label="MOD_NOTE_ITS_SEPARATOR" description="MOD_NOTE_ITS_SEPARATORDESC">
						<option value="1">YES</option>
						<option value="0">NO</option>
					</field>
					<field type="spacer" default="MOD_NOTE_ITS_NOTEEXTRA"/>
					<field name="note_text" type="textarea" rows="5" default="Some really important note [[http://www.spawnie.net##by Spawnie]]" label="MOD_NOTE_ITS_TEXT" description="MOD_NOTE_ITS_TEXTDESC" />
					<field name="newwindow" type="radio" default="_blank" label="MOD_NOTE_ITS_NEWWINDOW" description="MOD_NOTE_ITS_NEWWINDOWDESC">
						<option value="_blank">YES</option>
						<option value="_self">NO</option>
					</field>
					<field name="note_width" type="text" label="MOD_NOTE_ITS_WIDTH" description="MOD_NOTE_ITS_WIDTHDESC" />
					<field name="cufon" type="radio" default="1" label="MOD_NOTE_ITS_CUFON" description="MOD_NOTE_ITS_CUFONDESC">
						<option value="1">YES</option>
						<option value="0">NO</option>
					</field>
					<field type="spacer" default="MOD_NOTE_ITS_FONTEXTRA"/>
					<field name="font" type="list" default="handfont_500" label="MOD_NOTE_ITS_FONT" description="MOD_NOTE_ITS_FONTDESC">
                                                <option value="CyrillicOld_700">CyrillicOld_700</option>
                                                <option value="Atomic_Clock_Radio_400">Atomic_Clock_Radio_400</option>
                                                <option value="Painter_300">Painter_300</option>
                                                <option value="Alexandra_Script_400">Alexandra_Script_400</option>
						<option value="handfont_500">Handfont</option>
						<option value="Holloway_400">Holloway</option>
						<option value="Gunny_Handwriting_400">Gunny Handwriting</option>
						<option value="Parne_400">Parne</option>
					</field>
					<field name="color" type="text" default="464646" label="MOD_NOTE_ITS_COLOR" description="MOD_NOTE_ITS_COLORDESC" />
					<field name="headsize" type="text" default="16" label="MOD_NOTE_ITS_HEADSIZE" description="MOD_NOTE_ITS_HEADSIZEDESC" />
					<field name="size" type="text" default="13" label="MOD_NOTE_ITS_SIZE" description="MOD_NOTE_ITS_SIZEDESC" />
				</fieldset>
				
				<fieldset name="advanced">
					<field name="moduleclass_sfx" type="text"
						label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
						description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				</fieldset>
	        </fields>
		</config>
	
</extension>


		

