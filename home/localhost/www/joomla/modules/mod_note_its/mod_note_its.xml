			<filename>images/paper/top-right.png</filename>
			<filename>images/paper/separator.png</filename>
			<filename>images/index.html</filename>
			<filename>images/pin-green.png</filename>
			<filename>images/pin-red.png</filename>
			<filename>images/pin-blue.png</filename>
